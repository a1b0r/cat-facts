
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% items.each do |item| %>
                <div class="col">
                <% if item['fact'].present? %>
                    <%= render 'card', item: item %>
                    <%end%>
                </div>
            <% end %>
        </div>
    </div>
</div>